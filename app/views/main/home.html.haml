-if flash[:notice]
  =flash[:notice]
  
%h2== Current Medic Count as of #{Time.zone.now.strftime("%m/%d/%Y %H:%M")}
%table
  %thead
    %tr
      %th Time
      %th --
      %th Medics
      %th --
      %th M131
      %th M241
  %tbody
    -MedicRecord.limit(10).order("id desc").each do |rec|
      %tr{:class=>count_class(rec.count)}
        %td= rec.created_at.strftime("%H:%M")
        %td==--
        %td
          %strong==  #{rec.count}
        %td==--
        %td= (rec.m131_available ? "Available" : "Unavailable")
        %td= (rec.m241_available ? "Available" : "Unavailable")
      
%br
%br

%h2 Recent Alerts
%table
  %thead
    %tr
      %th Time Stamp
      %th --
      %th Message
  %tbody
    -MedicAlert.limit(5).order("id desc").each do |alert|
      %tr{:class=>message_class(alert.message)}
        %td= alert.created_at.strftime("%m/%d/%Y %H:%M")
        %td==--
        %td= alert.message
%style
  :sass
    table
      :border-collapse collapse
      :border 1px black solid
      .stable
        :background-color #33FF33
      .warn
        :background-color #FFFF55
      .bad
        :background-color #FF4444
      tr
        :border 1px black solid
        td, th
          :border 1px black solid